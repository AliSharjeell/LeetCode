class Solution {
public:
    string truncateSentence(string s, int k) {
        int count =0;
        string a;
        for(int i = 0 ;i<s.length();i++){
            if(s[i]==' '){
                count++;
            }
            if(count==k){
                break;
            }
            a+=s[i];
        }
        return a;
    }
};
